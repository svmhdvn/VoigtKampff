<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reading Speed Calibration"
        android:id="@+id/step1Title"
        android:layout_gravity="center_horizontal"
        android:editable="false"/>

    <TextView
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:text="@string/step1Info"
        android:id="@+id/step1Info"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/step1AnimatedText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="200dp"
        android:maxHeight="200dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/step1TextSpeed"
        android:layout_marginTop="20dp"
        android:progress="50"
        android:max="99"
        android:indeterminate="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Calibration"
        android:id="@+id/step1Back"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="menuView"/>
</LinearLayout>